{
    "name": "qaharmdz/mocha",
    "description": "Pragmatic Content Management",
    "keywords": ["cms","pac"],
    "homepage": "https://github.com/qaharmdz/mocha",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Mudzakkir",
            "email": "qaharmdz@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "pimple/pimple": "^3.2",
        "symfony/event-dispatcher": "^4.0",
        "symfony/http-foundation": "^4.0",
        "symfony/http-kernel": "^4.0",
        "symfony/routing": "^4.0",
        "symfony/finder": "^4.0",
        "joshcam/mysqli-database-class": "^2.9",
        "twig/twig": "^2.5"
    },
    "require-dev": {
        "kint-php/kint": "^3.0",
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "Mocha\\Admin\\": "admin",
            "Mocha\\Front\\": "front",
            "Mocha\\System\\": "system",
            "Mocha\\Install\\": "install"
        },
        "files": [
            "system/Functions.php",
            "system/Engine/Controller.php",
            "system/Engine/Abstractor.php"
        ]
    },
    "autoload-dev" : {
        "psr-4": { "Mocha\\Tests\\" : "tests" }
    },
    "scripts": {
        "test": "phpunit --stderr",
        "check-style": ".\\system\\vendor\\bin\\phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src",
        "fix-style": ".\\system\\vendor\\bin\\phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src",
        "cleanup": "composer install --no-dev"
    },
    "config": {
        "vendor-dir": "system/vendor",
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "prefer-stable" : true
}
