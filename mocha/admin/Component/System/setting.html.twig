                        }
                    }
                });

                $.fn.mocha.notify({
                    message : xhr.responseJSON.notify ? xhr.responseJSON.notify : mocha.i18n.error_form,
                    icon    : 'fa fa-exclamation',
                    status  : 'danger'
                });
                 */
            }
        });
    });
});
</script>
