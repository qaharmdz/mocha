<!DOCTYPE html>
<html lang="{{ mocha.i18n.get('lang_code') }}" dir="{{ mocha.i18n.get('lang_dir') }}" class="{{ mocha.document.getNode('class_html')|join(' ') }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="csrf-token" content="{{ mocha.tool_secure.csrfToken() }}">
{% if mocha.secure %}
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests">
{% endif %}

    <title>{{ mocha.document.getTitle }}</title>

{% for meta in mocha.document.getMeta %}
    <meta {{ meta.attribute }}="{{ meta.value }}" content="{{ meta.content }}">
{% endfor %}
{% for link in mocha.document.getLink %}
    <link rel="{{ link.rel }}" href="{{ link.href }}" {{ link.hreflang ? 'hreflang="' ~ link.hreflang ~ '"' }} {{ link.type ? 'type="' ~ link.type ~ '"' }} {{ link.media ? 'type="' ~ link.media ~ '"' }}>
{% endfor %}

    <link rel="stylesheet" href="{{ mocha.config.get('setting.url_site') }}_asset/style/uikit.sketsa{{ mocha.i18n.get('lang_dir') == 'rtl' ? '-rtl' }}.min.css?v=1.0.0-rc.25" media="all">
    <link rel="stylesheet" href="{{ mocha.config.get('setting.url_site') }}_th{{ mocha.theme.codename }}/style/dummy.min.css?v={{ mocha.theme.version }}" media="all">
{% for style in mocha.document.getStyle %}
    <link rel="stylesheet" href="{{ style.href }}" media="{{ style.media }}">
{% endfor %}

    <script src="{{ mocha.config.get('setting.url_site') }}_asset/script/jquery-3.3.1.min.js"></script>
    <script src="{{ mocha.config.get('setting.url_site') }}_asset/script/uikit.min.js?v=1.0.0-rc.25"></script>
    <script src="{{ mocha.config.get('setting.url_site') }}_asset/script/uikit-icons.min.js?v=1.0.0-rc.25"></script>

{% block head %}
<script>
var mocha = {
    'version'   : '{{ mocha.version }}',
    'theme'     : {{ mocha.theme|json_encode() }},
    'setting'   : {{ mocha.config.get('setting')|json_encode() }},
    'i18n'      : {{ mocha.i18n.all()|json_encode() }},
};
console.log(mocha);
$.ajaxSetup({
    headers: {
        'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
    }
});
</script>
{% endblock head %}
</head>

<body class="{{ mocha.document.getNode('class_body')|join(' ') }}">

